      $("#submitBtn").click(function()
      {
         // 누락 내용 체크
         if( $("#title").val()=="" || $("#category_L_Id").val()=="" || $("#region_L_Id").val()=="" 
               || $("#max").val()=="" || $("#content").val()=="")
         {
          
           alert('모든 항목을 입력해주세요'); 
           return;   //-- submit 액션 처리 중단 */
         }
               
         
         // 폼 submit 액션 처리 수행
         $("#clubForm").submit();
         
      });
      
   });
   
   
</script>

