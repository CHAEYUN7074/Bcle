<script type="text/javascript">
//각 상황별 alert 창 → required로 했는데 클리어하지가 않아서, 각 상황에 맞게 알림창을 띄우기로했다.
	$(document).ready(function()
	{
		$("#submitBtn").click(function()
		{
			if ($("#title").val().length == 0)
			{
				alert("동아리명을 입력하세요.");
				$("#title").focus();
				return false;
			}
			
			if ($("#category_L_Id").val().length == 0)
			{
				alert("카테고리를 선택해주세요");
				$("#category_L_Id").focus();
				return false;
			}
			if ($("#category_S_Id").val().length == 0)
			{
				alert("카테고리를 선택해주세요");
				$("#category_S_Id").focus();
				return false;
			}
			if ($("#region_L_ID").val().length == 0)
			{
				alert("지역을 선택해주세요");
				$("#region_L_ID").focus();
				return false;
			}
			if ($("#region_S_ID").val().length == 0)
			{
				alert("지역을 선택해주세요");
				$("#region_S_ID").focus();
				return false;
			}
			if ($("#max").val().length == 0)
			{
				alert("최대 인원을 입력하세요");
				$("#max").focus();
				return false;
			}

			if ($("#content").val().length == 0)
			 {
			 alert("내용을 입력하세요");
			 $("#content").focus();
			 return false;
			 }
			
			$("#clubForm").submit();
		})
	});
	
	
	//동아리명 중복 검사
   
   $(document).ready(function()
{
   
   $('.title').focusout(function()  //focusout
   {
      let userTitle = $('.title').val();   
      
      $.ajax({
         url : "checktitle.action" // ①컨트롤러로~
         , type : "POST"
         , data : {userTitle : userTitle}
         , dataType : "json"      
         , success : function(result) //Check title에서 여기로 왔다.
         {
            if(result.title == 0){
               $("#checkTitle").html('이미 동일한 이름의 동아리가 존재합니다.');
            }
            else
            {

               $("#checkTitle").html('사용할 수 있는 동아리 이름입니다.');
            }
         }
         , error : function(e)
         {
            alert(e.responseText); //에러사항 보여주기
         }
      })
   })
});

   
   
   
 </script>


</head>
